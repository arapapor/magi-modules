
groups:
  agent_group: [control]
    
agents:
  c_agent:
    group: agent_group
    path: /users/rning/magi-modules/cagent/ 
    execargs: { loglevel: debug }

streamstarts: [ integerAddStream ]

eventstreams:

  integerAddStream:         
      - type: event
        agent: c_agent
        method: addInteger
        trigger: addDone
        args:
          a: 25
          b: 50

      - type: trigger
        triggers: [ {event: addDone, retval: a + b,target: 'integerSubtractStream'} ]

  integerSubtractStream:
      - type: event
        agent: c_agent
        method: subtractInteger
        trigger: subDone
        args:
          a: 50
          b: 25

      - type: trigger
        triggers: [ {event: subDone, retval: a - b, target: 'integerMultiplyStream'} ]
  
  integerMultiplyStream:
      - type: event
        agent: c_agent
        method: multiplyInteger
        trigger: multDone
        args:
          a: 50
          b: 25

      - type: trigger
        triggers: [ {event: multDone, retval: a * b, target: 'integerDivideStream'} ]
        
  integerDivideStream:
      - type: event
        agent: c_agent
        method: divideInteger
        trigger: divDone
        args:
          a: 50
          b: 25

      - type: trigger
        triggers: [ {event: divDone, retval: a / b, target: 'exit'} ]

