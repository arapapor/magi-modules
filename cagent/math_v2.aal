
groups:
  agent_group: [control]
    
agents:
  c_agent:
    group: agent_group
    path: /users/rning/magi-modules/cagent/ 
    execargs: { loglevel: debug }

streamstarts: [ integerAddStream, integerSubtractStream, integerMultiplyStream, integerDivideStream ]

eventstreams:

  integerAddStream:         
      - type: event
        agent: c_agent
        method: addInteger
        trigger: addDone
        args:
          a: 25
          b: 50

      - type: trigger
        triggers: [ {event: addDone, retVal: 75} ]

  integerSubtractStream:
      - type: event
        agent: c_agent
        method: subtractInteger
        trigger: subDone
        args:
          a: 50
          b: 25

      - type: trigger
        triggers: [ {event: subDone, retVal: 25} ]
  
  integerMultiplyStream:
      - type: event
        agent: c_agent
        method: multiplyInteger
        trigger: multDone
        args:
          a: 50
          b: 25

      - type: trigger
        triggers: [ {event: multDone, retVal: 1250} ]
        
  integerDivideStream:
      - type: event
        agent: c_agent
        method: divideInteger
        trigger: divDone
        args:
          a: 50
          b: 25

      - type: trigger
        triggers: [ {event: divDone, retVal: 2} ]
  
  cleanupStream:
      - type: trigger
        triggers: [ {event: addDone} ]

      - type: trigger
        triggers: [ {event: subDone} ]

      - type: trigger
        triggers: [ {event: multDone} ]

      - type: trigger
        triggers: [ {event: divDone, target: 'exit'} ]
