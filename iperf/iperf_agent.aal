groups:
  client_group: [client0, client1, client2, client3, client4 ]
  server_group: &slist [ server]

agents:
  iperf_agent:
    group: client_group
    path: /proj/montage/modules/iperf/iperf.tar.gz
    execargs: {server: 'server', port: '26500', time: '20'}

streamstarts: [ teststream, cleanupstream ]	

eventstreams:

  teststream:
    - type: event
      agent: iperf_agent
      method: startClient
      trigger: iperfrun
      args: {}

  cleanupstream:
      - type: trigger
        triggers: [ {event: iperfrun} ]

      - type: trigger
        triggers: [ {target: exit} ]